<% layout("/layouts/boilerplate.ejs") %>

<head>
    <link rel="stylesheet" href="/css/signup.css" />
    <style>
        .asterisk {
            color: red;
        }
    </style>
</head>
<body>
    <div class="row mt-3">
        <div>
            <form
                action="/users/signup"
                method="post"
                class="needs-validation"
                novalidate
            >
                <div class="mb-3">
                    <label for="fname">
                        First Name <span class="asterisk">*</span>
                    </label>
                    <input
                        type="text"
                        name="firstName"
                        id="fname"
                        class="form-control"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="lname">
                        Last Name <span class="asterisk">*</span>
                    </label>
                    <input
                        type="text"
                        name="lastName"
                        id="lname"
                        class="form-control"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="username">
                        Username <span class="asterisk">*</span>
                    </label>
                    <input
                        type="text"
                        name="username"
                        id="username"
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">Please enter a username</div>
                </div>
                <div class="mb-3">
                    <label for="email">
                        Email <span class="asterisk">*</span>
                    </label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">
                        Please enter a valid email
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password">
                        Password <span class="asterisk">*</span>
                    </label>
                    <input
                        type="password"
                        name="password"
                        id="password"
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">
                        Please enter a valid password
                    </div>
                </div>
                <button class="btn mt-5">Sign Up</button>
            </form>
        </div>
    </div>
</body>
