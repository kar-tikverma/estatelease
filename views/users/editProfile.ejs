<% layout("/layouts/boilerplate.ejs") %>

<head>
    <link rel="stylesheet" href="/css/profile.css" />
    <style>
        .asterisk {
            color: red;
        }
    </style>
</head>
<body>
    <div class="row mt-3">
        <div>
            <form
                action="/profile"
                method="post"
                class="needs-validation"
                novalidate
            >
                <div class="mb-3">
                    <label for="fname">
                        First Name <span class="asterisk">*</span>
                    </label>
                    <input
                        type="text"
                        name="firstName"
                        id="fname"
                        class="form-control"
                        value="<%= user.firstName %>"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="lname">
                        Last Name <span class="asterisk">*</span>
                    </label>
                    <input
                        type="text"
                        name="lastName"
                        id="lname"
                        class="form-control"
                        value="<%= user.lastName %>"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="username">
                        Username
                    </label>
                    <input
                        type="text"
                        name="username"
                        id="username"
                        class="form-control"
                        value="<%= user.username %>"
                        required
                        disabled
                    />
                </div>
                <div class="mb-3">
                    <label for="email">
                        Email <span class="asterisk">*</span>
                    </label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        class="form-control"
                        value="<%= user.email %>"
                        required
                    />
                    <div class="invalid-feedback">
                        Please enter a valid email
                    </div>
                </div>
                <button class="btn mt-5">Save</button>
            </form>
        </div>
    </div>
</body>
